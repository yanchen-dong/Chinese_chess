<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0"
            style="-fx-background-color: #F0F0F0;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ydc.chess.controller.RecordsController">

    <top>
        <Label text="对局记录" BorderPane.alignment="CENTER">
            <font>
                <Font size="28.0" />
            </font>
            <padding>
                <Insets top="20.0" bottom="20.0"/>
            </padding>
        </Label>
    </top>

    <center>
        <HBox spacing="20.0">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- 左侧：记录列表 -->
            <VBox spacing="10.0" prefWidth="600" style="-fx-background-color: white; -fx-background-radius: 10;">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <Label text="对局记录列表" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <TableView fx:id="recordsTable" prefHeight="500"/>
            </VBox>
            
            <!-- 右侧：记录详情 -->
            <VBox spacing="10.0" prefWidth="350" style="-fx-background-color: white; -fx-background-radius: 10;">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <Label text="记录详情" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <ScrollPane fitToWidth="true" prefHeight="500">
                    <TextArea fx:id="recordDetailsArea" editable="false" wrapText="true"
                              style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 12px;"/>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="20.0" alignment="CENTER" style="-fx-background-color: white;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="replayButton" text="复盘" onAction="#onReplayClicked"
                    style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 120; -fx-pref-height: 40;"/>
            <Button fx:id="deleteButton" text="删除" onAction="#onDeleteClicked"
                    style="-fx-font-size: 16px; -fx-background-color: #F44336; -fx-text-fill: white; -fx-pref-width: 120; -fx-pref-height: 40;"/>
            <Button fx:id="backButton" text="返回" onAction="#onBackClicked"
                    style="-fx-font-size: 16px; -fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-pref-width: 120; -fx-pref-height: 40;"/>
        </HBox>
    </bottom>

</BorderPane>

