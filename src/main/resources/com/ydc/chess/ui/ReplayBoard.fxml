<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1100.0"
            style="-fx-background-color: #F0F0F0;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ydc.chess.controller.ReplayBoardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #CCCCCC;">
            <padding>
                <Insets top="10.0" right="20.0" bottom="10.0" left="20.0" />
            </padding>
            <Label text="复盘模式" style="-fx-font-weight: bold;">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <Label fx:id="stepLabel" text="步数: 0 / 0" style="-fx-font-size: 16px;"/>
            <Label fx:id="infoLabel" text="初始局面" style="-fx-font-size: 16px;"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- 左侧：棋盘 -->
            <VBox spacing="10.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                <Pane fx:id="boardPane"
                      prefHeight="625.0" prefWidth="560.0"
                      minHeight="500.0" minWidth="500.0"
                      maxHeight="650.0" maxWidth="600.0"
                      style="-fx-background-color: #E6C288; -fx-border-color: #8B4513; -fx-border-width: 5;">
                </Pane>
            </VBox>
            
            <!-- 右侧：控制面板 -->
            <VBox spacing="10.0" prefWidth="320" minWidth="300" style="-fx-background-color: white; -fx-background-radius: 10;">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <Label text="控制面板" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <!-- 控制按钮 -->
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="prevButton" text="上一步" onAction="#onPrevClicked"
                            style="-fx-font-size: 14px; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                    <Button fx:id="nextButton" text="下一步" onAction="#onNextClicked"
                            style="-fx-font-size: 14px; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                </HBox>
                
                <Button fx:id="autoPlayButton" text="自动播放" onAction="#onAutoPlayClicked"
                        style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-pref-width: 220; -fx-pref-height: 40;"/>
                
                <Label text="播放速度:" style="-fx-font-size: 14px;"/>
                <Slider fx:id="speedSlider" maxWidth="220" prefWidth="220"/>
                
                <Separator/>
                
                <Label text="走棋记录:" style="-fx-font-size: 14px;"/>
                <ScrollPane fitToWidth="true" prefHeight="250" VBox.vgrow="ALWAYS">
                    <TextArea fx:id="moveLogArea" editable="false" wrapText="true"
                              style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 11px;"/>
                </ScrollPane>
                
                <Button fx:id="backButton" text="返回记录列表" onAction="#onBackClicked"
                        style="-fx-font-size: 14px; -fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-pref-width: 220; -fx-pref-height: 35;"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>

